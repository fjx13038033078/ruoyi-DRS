/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 0;
  min-height: 100%;
  position: relative;
}

/* 欢迎横幅 */
.welcome-banner {
  position: relative;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-bottom: 30rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.banner-content {
  text-align: center;
  z-index: 2;
}

.welcome-text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.welcome-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.3;
}

.banner-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 100rpx;
  height: 100rpx;
  top: -50rpx;
  right: -50rpx;
}

.circle-2 {
  width: 70rpx;
  height: 70rpx;
  bottom: -35rpx;
  left: -35rpx;
}

.circle-3 {
  width: 50rpx;
  height: 50rpx;
  top: 60%;
  left: 30rpx;
  transform: translateY(-50%);
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  margin: 0 30rpx 30rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.15);
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  min-height: 180rpx;
}

.user-card-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 1;
}

.user-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx;
  gap: 20rpx;
  min-height: 180rpx;
  box-sizing: border-box;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid rgba(255, 255, 255, 0.4);
  flex-shrink: 0;
}

.avatar-text {
  color: #fff;
  font-size: 42rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
  gap: 6rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-role {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.3;
}

.user-status {
  display: flex;
  align-items: center;
  margin-top: 2rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: #52c41a;
  margin-right: 8rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.status-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.logout-btn {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background: rgba(255, 255, 255, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  flex-shrink: 0;
  transition: all 0.3s;
}

.logout-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.35);
}

.logout-icon {
  font-size: 30rpx;
}

/* 功能导航 */
.function-nav {
  margin: 0 30rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  padding: 30rpx 30rpx 35rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.nav-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.nav-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.nav-subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.nav-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 10rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.nav-item:active {
  transform: translateY(-3rpx);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.15);
  border-color: rgba(102, 126, 234, 0.3);
}

.nav-icon-wrapper {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.nav-icon-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: inherit;
  opacity: 0.15;
  border-radius: 50%;
}

.medical-bg {
  background: #667eea;
}

.drug-bg {
  background: #4facfe;
}

.check-bg {
  background: #43e97b;
}

.reaction-bg {
  background: #f093fb;
}

.nav-icon {
  font-size: 32rpx;
  z-index: 2;
}

.nav-text {
  font-size: 22rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  line-height: 1.4;
  word-break: keep-all;
}

/* 快速提示 */
.quick-tips {
  margin: 0 30rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  border-left: 6rpx solid #667eea;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
  width: 40rpx;
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  line-height: 1.5;
}

/* 底部装饰 */
.bottom-decoration {
  position: relative;
  height: 100rpx;
  margin-top: 30rpx;
  overflow: hidden;
}

.wave {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50% 50% 0 0;
}

.wave-1 {
  opacity: 0.3;
  transform: scale(1.1);
}

.wave-2 {
  opacity: 0.1;
  transform: scale(1.2);
}