/* drug-info.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  width: 100%;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
  width: 100%;
  box-sizing: border-box;
}

.container {
  padding: 10rpx 30rpx 20rpx 30rpx;
  min-height: 100%;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* 搜索栏 */
.search-section {
  margin-bottom: 5rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.search-icon {
  font-size: 32rpx;
  color: #666;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  padding: 15rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.search-btn:active {
  opacity: 0.8;
}


/* 通用样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 药品列表 */
.drug-list-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 15rpx 25rpx 25rpx 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  margin-top: 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
}

.drug-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.drug-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  border: 2rpx solid #f0f0f0;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.drug-item:active {
  border-color: #667eea;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.15);
}

.drug-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  align-self: flex-start;
}

.drug-placeholder {
  font-size: 36rpx;
  color: #fff;
}

.drug-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  min-width: 0;
  overflow: hidden;
}

.drug-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  word-break: break-all;
  overflow-wrap: break-word;
  white-space: normal;
}

.drug-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-word;
  overflow-wrap: break-word;
}

.drug-indications {
  font-size: 24rpx;
  color: #52c41a;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-word;
  overflow-wrap: break-word;
}

.drug-precautions {
  font-size: 24rpx;
  color: #fa8c16;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-word;
  overflow-wrap: break-word;
}

.drug-actions {
  display: flex;
  gap: 15rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  min-width: 120rpx;
}

.detail-btn {
  background: #f0f0f0;
  color: #666;
}

.detail-btn:active {
  background: #e0e0e0;
}

.instruction-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.instruction-btn:active {
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e1e5e9;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.error-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-bottom: 10rpx;
}

.error-desc {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.retry-btn {
  padding: 20rpx 40rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.retry-btn:active {
  opacity: 0.8;
}

