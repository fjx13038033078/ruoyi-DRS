/* drug-instruction.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f7fa;
  width: 100%;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
}

.container {
  padding: 30rpx;
  min-height: 100%;
  box-sizing: border-box;
  width: 100%;
  max-width: 100%;
  overflow: hidden;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #666;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 说明书内容 */
.instruction-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* 药品头部信息 */
.drug-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.drug-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 30rpx;
}

.drug-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  overflow: hidden;
}

.drug-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  word-break: break-all;
  overflow-wrap: break-word;
  white-space: normal;
}

.drug-version {
  font-size: 26rpx;
  color: #666;
}

/* 内容区域 */
.content-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #667eea;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-word;
  overflow-wrap: break-word;
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #667eea;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* 更新时间 */
.update-info {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.update-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.update-time {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #aaa;
  text-align: center;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #ff4d4f;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.error-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.error-desc {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.retry-btn {
  padding: 20rpx 40rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.retry-btn:active {
  opacity: 0.8;
}
