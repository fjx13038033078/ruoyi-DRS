/* medication-check.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  width: 100%;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

.container {
  padding: 20rpx 30rpx 200rpx 30rpx;
  min-height: calc(100% + 1px);
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  overflow: visible;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e1e5e9;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.error-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-bottom: 10rpx;
}

.error-desc {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.retry-btn {
  padding: 20rpx 40rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.retry-btn:active {
  opacity: 0.8;
}

/* 今日状态 */
.today-status {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  color: #fff;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
}

.status-date {
  font-size: 24rpx;
  opacity: 0.9;
}

.status-desc {
  margin-top: 15rpx;
}

.desc-text {
  font-size: 24rpx;
  opacity: 0.9;
  line-height: 1.5;
}

/* 通用样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
}

/* 用药记录 */
.medication-records {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
  margin-top: 0;
  margin-bottom: 0;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 用药记录分组 */
.record-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.record-item {
  display: flex;
  flex-direction: column;
  padding: 25rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s;
  gap: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.record-item:active {
  border-color: #667eea;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.15);
}

/* 头部信息 */
.record-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.drug-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.record-main-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.drug-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
  word-break: break-all;
  overflow-wrap: break-word;
}

.drug-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
}

.meta-tag {
  font-size: 24rpx;
  color: #666;
  background: rgba(102, 126, 234, 0.08);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.meta-divider {
  font-size: 24rpx;
  color: #ccc;
}

/* 日期信息 */
.drug-dates {
  display: flex;
  gap: 20rpx;
  padding: 15rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 12rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.date-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
}

.date-label {
  font-size: 22rpx;
  color: #999;
}

.date-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 打卡按钮 */
.checkin-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.35);
  transition: all 0.3s;
  width: 100%;
  box-sizing: border-box;
}

.checkin-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.btn-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.btn-text {
  font-size: 30rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

/* 打卡历史区域 */
.record-logs {
  margin-top: 10rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.03);
  border-radius: 16rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.1);
}

.logs-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx dashed rgba(102, 126, 234, 0.2);
}

.logs-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #667eea;
}

.logs-toggle {
  font-size: 24rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1.2;
  min-width: 80rpx;
  height: 48rpx;
  box-sizing: border-box;
}

.logs-toggle:active {
  background: rgba(102, 126, 234, 0.2);
}

/* 打卡记录列表（在用药记录下） */
.record-logs .log-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.record-logs .log-item {
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.record-logs .log-item:active {
  border-color: #667eea;
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.12);
}

.record-logs .log-status {
  width: 50rpx;
  height: 50rpx;
  flex-shrink: 0;
}

.record-logs .status-icon {
  font-size: 22rpx;
}

.record-logs .log-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.record-logs .log-time {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.record-logs .log-status-text {
  font-size: 22rpx;
  font-weight: bold;
}

/* 打卡记录（旧版，暂时保留） */
.checkin-logs {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
  max-height: none;
}

.log-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  max-height: none;
  overflow: visible;
}

.log-item {
