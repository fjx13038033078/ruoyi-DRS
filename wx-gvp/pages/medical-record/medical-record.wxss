/* medical-record.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx 30rpx 30rpx 30rpx;
  min-height: 100%;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e1e5e9;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 认证失败提示 */
.auth-failure-tip {
  margin: 30rpx;
  background: #ff6b6b;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.3);
}

.tip-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tip-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.tip-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.tip-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.tip-btn {
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.tip-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 病历信息 */
.medical-record {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 基本信息 */
.basic-info {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.patient-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.patient-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-item {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

/* 过敏史/病史 */
.history-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  flex: 1;
  min-height: 400rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.history-content {
  flex: 1;
}

.history-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  word-wrap: break-word;
  white-space: pre-wrap;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.error-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.error-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.error-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.retry-btn {
  padding: 20rpx 40rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
  max-width: 200rpx;
}

.retry-btn:active {
  opacity: 0.8;
}

.logout-btn {
  padding: 20rpx 40rpx;
  background: #ff4d4f;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
  max-width: 200rpx;
}

.logout-btn:active {
  opacity: 0.8;
}

.error-tips {
  margin-top: 30rpx;
  padding: 20rpx;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 12rpx;
  border-left: 6rpx solid #ffc107;
}

.tip-text {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.5;
}